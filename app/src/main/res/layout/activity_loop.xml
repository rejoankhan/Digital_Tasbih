<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoopActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:padding="20dp"
        android:layout_height="match_parent">


        <TextView
            android:textSize="30sp"
            android:text="বাচ্চাদের অংক"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/etLoop1"
            android:hint="কত থেকে শুরু"
            android:textSize="25sp"
            android:inputType="number"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="70dp"/>
        <EditText
            android:id="@+id/etLoop2"
            android:hint="কত থেকে শেষ"
            android:textSize="25sp"
            android:inputType="number"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="70dp"/>

        <TextView
            android:id="@+id/tvDisplayloop"
            android:textSize="30sp"
            android:layout_width="match_parent"
            android:layout_height="350dp"/>
        <TextView
            android:id="@+id/tvDisplayTotal"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="70dp"/>

        <Button
            android:id="@+id/buttonZor"
            android:layout_width="291dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="জোড় সংখ্যা বের করুন"
            android:textColor="@color/black"
            android:textSize="25sp" />
        <Button
            android:id="@+id/buttonBzor"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="বিজোড় সংখ্যা বের করুন"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



    </LinearLayout>






</ScrollView>